<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeFragment">

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/main_lang_contain"/>
    <ImageButton
        android:id="@+id/main_set"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:src="@mipmap/ic_cog_foreground"
        android:background="@color/light_blue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_lang_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toTopOf="@+id/main_inbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_logo">

        <LinearLayout
            android:id="@+id/main_lang_1"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rectangle_box">
            <TextView
                android:id="@+id/main_from_text"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing=".08"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_down_arrow"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/main_lang_switch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/light_blue"
            android:src="@mipmap/ic_switch_foreground" />
        <LinearLayout
            android:id="@+id/main_lang_2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:background="@drawable/rectangle_box">
            <TextView
                android:id="@+id/main_to_text"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:letterSpacing=".08"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_down_arrow"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <EditText
        android:id="@+id/main_inbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:background="@color/light_gray"
        android:fontFamily="@font/pt_sans"
        android:gravity="top|start"
        android:hint="Enter text"
        android:autofillHints="Enter text"
        android:inputType="text"
        android:keepScreenOn="true"
        android:letterSpacing=".08"
        android:minHeight="180dp"
        android:maxHeight="300dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/blue"
        android:textColorHint="@color/gray"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="true"
        app:layout_constraintBottom_toTopOf="@+id/main_button_contain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.653"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_lang_contain" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_button_contain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@+id/main_outbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_inbox"
        app:layout_constraintVertical_bias="0.308">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_mic_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button"
            android:foreground="@mipmap/ic_mic_foreground"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_keyboard_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/round_button"
            android:foreground="@mipmap/ic_keyboard_foreground"
            android:foregroundTint="@color/dark_blue"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/main_camera_btn"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/round_button"
            android:foreground="@mipmap/ic_camera_foreground"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/main_outbox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:background="@color/light_gray"
        android:fontFamily="@font/pt_sans"
        android:gravity="top|start"
        android:letterSpacing=".08"
        android:minHeight="180dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_button_contain" />

    <ImageButton
        android:id="@+id/main_vol"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/ic_vol_foreground"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/main_outbox"
        app:layout_constraintTop_toTopOf="@id/main_outbox"/>

    <ImageButton
        android:id="@+id/main_save"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@mipmap/ic_star_out"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/main_outbox"
        app:layout_constraintTop_toBottomOf="@id/main_vol" />
    <ProgressBar
        android:id="@+id/loading_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

</androidx.constraintlayout.widget.ConstraintLayout>