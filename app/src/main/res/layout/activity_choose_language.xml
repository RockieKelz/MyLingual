<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseLanguage"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/light_blue"
    android:id="@+id/language_choice" >

    <ImageView
        android:id="@+id/choice_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/choice_head"/>

    <TextView
        android:id="@+id/choice_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:fontFamily="@font/roboto_condensed_regular"
        android:letterSpacing=".08"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/choose_your_languages"
        android:textColor="@color/blue"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/choice_subhead"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

    <TextView
        android:id="@+id/choice_subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing=".08"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/translate"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <TextView
        android:id="@+id/choice_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing=".08"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/from"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/choice_head"
        app:layout_constraintTop_toBottomOf="@+id/choice_subhead"
        app:layout_constraintVertical_bias="0.084" />

    <Spinner
        android:id="@+id/choice_spin_from"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="@color/light_gray"
        android:backgroundTint="@color/light_gray"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:dropDownSelector="@color/black"
        android:fontFamily="@font/roboto"
        android:foregroundTint="@color/black"
        android:letterSpacing=".08"
        android:spinnerMode="dropdown"
        android:splitMotionEvents="false"
        app:layout_constraintEnd_toEndOf="@+id/choice_head"
        app:layout_constraintStart_toStartOf="@+id/choice_head"
        app:layout_constraintTop_toBottomOf="@+id/choice_from" />

    <TextView
        android:id="@+id/choice_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing=".08"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/to"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/choice_head"
        app:layout_constraintTop_toBottomOf="@+id/choice_spin_from"
        app:layout_constraintVertical_bias="0.084"/>

    <Spinner
        android:id="@+id/choice_spin_to"
        android:layout_width="256dp"
        android:layout_height="43dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_gray"
        android:clickable="true"
        android:dropDownWidth="match_parent"
        android:dropDownSelector="@color/black"
        android:fontFamily="@font/roboto"
        android:foregroundTint="@color/black"
        android:letterSpacing=".08"
        android:spinnerMode="dropdown"
        android:splitMotionEvents="false"
        app:layout_constraintEnd_toEndOf="@+id/choice_head"
        app:layout_constraintStart_toStartOf="@+id/choice_head"
        app:layout_constraintTop_toBottomOf="@+id/choice_to" />

    <Button
        android:id="@+id/choice_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="64dp"
        android:text="@string/save"
        android:backgroundTint="@color/dark_blue"
        android:textColor="@color/lightest_blue_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choice_spin_to"
        app:layout_constraintVertical_bias="0.22" />
</androidx.constraintlayout.widget.ConstraintLayout>